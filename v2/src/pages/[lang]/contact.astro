---
import Layout from "../../layouts/Layout.astro";
import {
  useTranslations,
  LANGUAGES_KEYS,
  getLangFromUrl,
} from "../../i18n/utils";

// İkonları import et
import MailIcon from "../../assets/icons/mail.svg";
import MapIcon from "../../assets/icons/map.svg";
import PhoneIcon from "../../assets/icons/phone.svg";

export async function getStaticPaths() {
  return LANGUAGES_KEYS.map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t['contact.title']}
  description={t['contact.descriptionPart1']}
  lang={lang}
>
  <div class="container mx-auto px-4 py-12">
    <!-- Başlık ve Açıklama -->
    <h1 class="text-4xl font-bold text-center mb-5">{t['contact.title']}</h1>
    <p class="text-center text-base-content/70 mb-2">
      {t['contact.descriptionPart1']}
    </p>
    <p class="text-center text-base-content/70 mb-5">
      <strong>{t['contact.descriptionPart2']}</strong>{" "}
      <strong>{t['contact.descriptionPart3']}</strong>
    </p>

    <!-- Harita Bölümü -->
    <h3 class="text-3xl font-bold mb-5 text-center">{t['contact.mapTitle']}</h3>
    <div class="w-full mb-12 rounded-lg overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d778.0629371523258!2d35.48287740634327!3d38.73498485820772!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x152b13457f788433%3A0xa29b7d3beed1cff8!2sAvukat%20Yasemin%20U%C3%A7arer%20Durgunlu!5e0!3m2!1str!2str!4v1750064981693!5m2!1str!2str"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title={t['contact.mapTitle']}
      >
      </iframe>
    </div>

    <!-- İletişim Bilgileri -->
    <div
      class="flex flex-col items-center p-8 bg-base-200 rounded-lg shadow-md mt-12 mb-12"
    >
      <h2 class="text-3xl font-bold mb-8 text-center">
        {t['contact.contactInfoTitle']}
      </h2>
      <div class="space-y-8 text-center w-full max-w-md">
        <!-- Adres -->
        <a
          href="https://maps.app.goo.gl/riBmHzqj7KcKxn2x9"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col sm:flex-row justify-start items-start gap-4 p-4 rounded-lg hover:bg-base-300 transition-colors"
        >
          <MapIcon class="w-10 h-10 text-primary flex-shrink-0" />
          <div class="text-center sm:text-left">
            <div class="font-semibold text-lg mb-1">{t['contact.address']}</div>
            <span class="text-lg text-base-content/70 whitespace-pre-line">
              {t['footer.address']}
            </span>
          </div>
        </a>

        <!-- Telefon -->
        <a
          href="tel:+905362191550"
          class="flex flex-col sm:flex-row justify-start items-start gap-4 p-4 rounded-lg hover:bg-base-300 transition-colors"
        >
          <PhoneIcon class="w-10 h-10 text-primary flex-shrink-0" />
          <div class="text-center sm:text-left">
            <div class="font-semibold text-lg mb-1">{t['contact.phone']}</div>
            <span class="text-lg text-primary hover:text-primary-focus transition-colors">
              +90 536 219 15 50
            </span>
          </div>
        </a>

        <!-- E-posta -->
        <a
          href="mailto:yaseminucarer@hotmail.com"
          class="flex flex-col sm:flex-row justify-start items-start gap-4 p-4 rounded-lg hover:bg-base-300 transition-colors"
        >
          <MailIcon class="w-10 h-10 text-primary flex-shrink-0" />
          <div class="text-center sm:text-left">
            <div class="font-semibold text-lg mb-1">{t['contact.email']}</div>
            <span class="text-lg text-primary hover:text-primary-focus transition-colors">
              yaseminucarer@hotmail.com
            </span>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>
