---
import HeaderLink from "./HeaderLink.astro";

interface Props {
  prefix: string;
  t: any;
  homeSlug: string;
  blogSlug: string;
  tagsSlug: string;
  practiceMenuClass?: string;
}

const {
  prefix,
  t,
  homeSlug,
  blogSlug,
  tagsSlug,
  practiceMenuClass = "menu p-2 bg-base-100 rounded-box shadow",
} = Astro.props as Props;
---
<li><HeaderLink href={homeSlug}>{t.nav.home}</HeaderLink></li>
<li>
  <details>
    <summary>{t.nav.practiceAreas}</summary>
    <ul class={practiceMenuClass}>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/vehicle-value-loss`}>
          {t.nav.practiceAreasItems.vehicleValueLoss}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/family-law`}>
          {t.nav.practiceAreasItems.familyLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/cybercrimes`}>
          {t.nav.practiceAreasItems.cybercrimes}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/real-estate-zoning`}>
          {t.nav.practiceAreasItems.realEstateZoningLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/inheritance-law`}>
          {t.nav.practiceAreasItems.inheritanceLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/foreigners-citizenship`}>
          {t.nav.practiceAreasItems.foreignersCitizenshipLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/criminal-law`}>
          {t.nav.practiceAreasItems.criminalLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/labor-law`}>
          {t.nav.practiceAreasItems.laborLaw}
        </HeaderLink>
      </li>
      <li>
        <HeaderLink href={`${prefix}/practice-areas/enforcement-bankruptcy`}>
          {t.nav.practiceAreasItems.enforcementBankruptcyLaw}
        </HeaderLink>
      </li>
    </ul>
  </details>
</li>
<li><HeaderLink href={`${prefix}/faq`}>{t.nav.faq}</HeaderLink></li>
<li><HeaderLink href={`${prefix}/notes`}>{t.nav.notes}</HeaderLink></li>
<li><HeaderLink href={blogSlug}>{t.nav.blog}</HeaderLink></li>
<li><HeaderLink href={tagsSlug}>{t.nav.tags}</HeaderLink></li>
<li><HeaderLink href={`${prefix}/contact`}>{t.nav.contact}</HeaderLink></li>